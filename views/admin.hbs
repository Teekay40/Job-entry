<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Admin </title>

   <style>

     * {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
     }

     .admin-nav {
        width: 100%;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        /* background-color: rgb(58, 58, 58); */
        background-color: #00B074;
        color: white;
     }

     .main-div {
        display: flex;  
        width: 100vw;
        height: 100vh;     
     }

     .side-panel{
        /* background-color: rgb(31, 31, 31); */
        background-color: white;
        color: #00B074;
        width: 20%;
        display: flex;
        flex-direction: column;
        row-gap: 10px;
        padding-top: 20px;
        padding-left: 25px;
     }

     .dashboard-body{
        background-color: whitesmoke;
        width: 80%;
        display: flex;
        justify-content: center;
        align-items: center;
     }

     .table-div {
        height: 75%;
        width: 75%;
        display: flex; 
        column-gap: 15px;
     }
    
     a {
        color: #00B074;
        text-decoration: none;
     }

    .box-1, .box-2, .box-3, .box-4 {
     /* background-color: rgb(58, 58, 58); */
     background-color: #00B074;
     width: 45%;
     height: 200px;
     border-radius: 10px;
     display: flex;
     align-items: center;
     justify-content: center;
     flex-direction: column;
     color: white;
    }

   </style>
</head>
<body>
  
  <div class="admin-nav">
       <h1> Admin DashBoard </h1>
  </div>
  <div class="main-div">
    <div class="side-panel">
       <a href="admin.html"> Dashboard </a>
       <br>
       <a href="/admin-jobs"> Jobs </a>
       <br>
       <a href="/admin-applications"> Applications </a>
       <br>
       <a href="/admin-messages"> Messages </a>
       <br>
       <a href="/admin-subscribers"> Subscribers </a>
       <br>
       <a href="/index"> LogOut </a>

    </div>
    
    <div class="dashboard-body">
          <div class="table-div">

              <div class="box-1"> 
               
               <h1> {{totalJobsPosted}} </h1> 
               <p> Jobs </p>
              </div>

              <div class="box-2">
               <h1> {{totalApplications}} </h1> 
               <p> Applications </p>
              </div>

              <div class="box-1"> 
               
                <h1> {{totalMessages}} </h1> 
                <p> Messages </p>
               </div>
 
               <div class="box-2">
                <h1> 50 </h1> 
                <p> Subscribers </p>
               </div>
          </div>
    </div>
  </div>

</body>
</html>